{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Agent OS v4.9.0 - AST verification, parallel waves, three-tier error handling",

  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/session-start.sh\"",
            "timeout": 10
          }
        ]
      }
    ],

    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/session-end.sh\"",
            "timeout": 10
          }
        ]
      }
    ],

    "SubagentStart": [
      {
        "_comment": "Initialize subagent context and track lifecycle metrics (v4.8.0)",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/subagent-start.sh\"",
            "timeout": 5
          }
        ]
      }
    ],

    "SubagentStop": [
      {
        "_comment": "Capture subagent completion and transcript for debugging (v4.8.0)",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/subagent-stop.sh\"",
            "timeout": 5
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "_comment": "Auto-regenerate tasks.md and auto-graduate future_tasks when tasks.json changes",
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/post-file-change.sh\"",
            "timeout": 15
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "_comment": "Validation gate before git commits - CANNOT BE SKIPPED",
        "matcher": "Bash\\(git commit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/pre-commit-gate.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  },

  "permissions": {
    "allow": [
      "Read(.agent-os/**)",
      "Read(.claude/**)",
      "Write(.agent-os/specs/**)",
      "Write(.agent-os/progress/**)",
      "Write(.agent-os/state/**)",
      "Bash(.claude/scripts/*)",
      "Bash(npm *)",
      "Bash(git *)",
      "Bash(gh *)",
      "mcp__claude-in-chrome__*",
      "mcp__ide__*"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)"
    ]
  },

  "env": {
    "AGENT_OS_VERSION": "4.9.0"
  }
}
