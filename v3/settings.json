{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Agent OS v3.0 - Native Claude Code hooks configuration (no MCP required)",

  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/session-start.sh\"",
            "timeout": 10
          }
        ]
      }
    ],

    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/session-end.sh\"",
            "timeout": 10
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "_comment": "Auto-regenerate tasks.md when tasks.json changes",
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/post-file-change.sh\"",
            "timeout": 5
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "_comment": "Validation gate before git commits - CANNOT BE SKIPPED",
        "matcher": "Bash\\(git commit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PROJECT_DIR}/.claude/hooks/pre-commit-gate.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  },

  "permissions": {
    "allow": [
      "Read(.agent-os/**)",
      "Read(.claude/**)",
      "Write(.agent-os/specs/**)",
      "Write(.agent-os/progress/**)",
      "Write(.agent-os/state/**)",
      "Bash(.claude/scripts/*)",
      "Bash(npm run test:*)",
      "Bash(npm run build:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)"
    ]
  },

  "env": {
    "AGENT_OS_VERSION": "3.6.0",
    "CLAUDE_PROJECT_DIR": "${CLAUDE_PROJECT_DIR}"
  }
}
